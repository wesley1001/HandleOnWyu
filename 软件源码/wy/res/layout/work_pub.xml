<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/awhile"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/global_top_background" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/title_bar_center_button_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/workpub_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxWidth="150dip"
                android:padding="8dip"
                android:singleLine="true"
                android:text="发表招聘"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/work_pub_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/title_text_button_left_arrow"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:fadingEdge="none"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="2.0dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:layout_marginTop="17.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职    位："
                    android:textColor="@color/black"
                    android:textSize="12.0dip" />

                <EditText
                    android:id="@+id/work_pub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip"
                    android:layout_weight="1.0"
                    android:hint="输入职位"
                    android:singleLine="true"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="薪    资："
                    android:textColor="@color/black"
                    android:textSize="12.0sp" />

                <EditText
                    android:id="@+id/work_pub_money"
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:textSize="12.0sp" />

                <RadioGroup
                    android:id="@+id/work_pub_moneyrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/work_pub_moneytian"
                        android:layout_width="65.0sp"
                        android:layout_height="30.0sp"
                        android:checked="true"
                        android:text="元/天"
                        android:textColor="@color/black"
                        android:textSize="11.0dip" />

                    <RadioButton
                        android:id="@+id/work_pub_moneyyue"
                        android:layout_width="65.0sp"
                        android:layout_height="30.0sp"
                        android:checked="false"
                        android:text="元/月"
                        android:textColor="@color/black"
                        android:textSize="11.0dip" />

                    <RadioButton
                        android:id="@+id/work_pub_moneymain"
                        android:layout_width="62.0sp"
                        android:layout_height="30.0sp"
                        android:checked="false"
                        android:text="面议"
                        android:textColor="@color/black"
                        android:textSize="11.0dip" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="人    数："
                    android:textColor="@color/black"
                    android:textSize="12.0sp" />

                <EditText
                    android:id="@+id/work_pub_num"
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:textSize="12.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:text="人"
                    android:textColor="@color/black"
                    android:textSize="12.0sp" />

                <CheckBox
                    android:id="@+id/work_pub_num_buxian"
                    android:layout_width="62.0sp"
                    android:layout_height="30.0sp"
                    android:checked="false"
                    android:text="不限"
                    android:textColor="@color/black"
                    android:textSize="11.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="性    别："
                    android:textColor="@color/black"
                    android:textSize="12.0sp" />

                <RadioGroup
                    android:id="@+id/work_pub_genderrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/work_pub_genderbu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="男女不限"
                        android:textColor="@color/black"
                        android:textSize="11.0dip" />

                    <RadioButton
                        android:id="@+id/work_pub_genderman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="男生"
                        android:textColor="@color/black"
                        android:textSize="11.0dip" />

                    <RadioButton
                        android:id="@+id/work_pub_genderniv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="女生"
                        android:textColor="@color/black"
                        android:textSize="11.0dip" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作时间："
                    android:textColor="@color/black"
                    android:textSize="12.0sp" />

                <EditText
                    android:id="@+id/work_pub_worktime"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:hint="填写工作时间"
                    android:singleLine="true"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作地点："
                    android:textColor="@color/black"
                    android:textSize="12.0sp" />

                <EditText
                    android:id="@+id/work_pub_workpath"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:hint="填写工作地点"
                    android:singleLine="true"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="过期时间："
                    android:textColor="@color/black"
                    android:textSize="12.0sp" />

                <CheckBox
                    android:id="@+id/work_pub_outtime_buxian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="长期有效"
                    android:textColor="@color/black"
                    android:textSize="11.0dip" />

                <TextView
                    android:id="@+id/work_pub_outtime_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="10.0dip"
                    android:textColor="@color/black"
                    android:textSize="12.0sp" />

                <Button
                    android:id="@+id/work_pub_outtime_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:background="@drawable/login_btn"
                    android:gravity="right"
                    android:text="点击选择"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联   系  人："
                    android:textColor="@color/black"
                    android:textSize="12.0sp" />

                <EditText
                    android:id="@+id/work_pub_linkman"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:hint="填写联系人"
                    android:singleLine="true"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手        机 ："
                    android:textColor="@color/black"
                    android:textSize="12.0sp" />

                <EditText
                    android:id="@+id/work_pub_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip"
                    android:hint="填写手机"
                    android:singleLine="true"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip" >
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:text="补充说明："
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/work_pub_content"
                android:layout_width="fill_parent"
                android:layout_height="130.0dip"
                android:gravity="top"
                android:hint="填写对招聘信息的补充说明"
                android:lines="5"
                android:textSize="12.0sp" />
            
            
            
            <Button
                android:id="@+id/work_pub_submit"
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginBottom="1dip"
                android:background="@drawable/login_btn"
                android:shadowColor="#7f000000"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="18sp" 
                android:enabled="true"/>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>